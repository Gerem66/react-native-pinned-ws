{
  "name": "react-native-pinned-ws",
  "version": "1.0.0",
  "description": "React Native WebSocket with SSL/TLS Public Key Pinning support",
  "main": "dist/module/index.js",
  "module": "dist/module/index.js",
  "types": "dist/typescript/index.d.ts",
  "react-native": "dist/module/index.js",
  "source": "src/index.ts",
  "files": [
    "src",
    "dist",
    "android",
    "ios",
    "*.podspec",
    "codegen.json",
    "!android/build",
    "!android/.cxx",
    "!android/.gradle",
    "!android/gradle.properties",
    "!android/local.properties",
    "!android/**/*.log",
    "!android/.settings",
    "!ios/build",
    "!**/__tests__/**",
    "!**/*.test.*",
    "!**/*.spec.*"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "rm -rf dist android/build ios/build node_modules",
    "build": "rm -rf dist && npx react-native-builder-bob build && tsc --project tsconfig.types.json",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "websocket",
    "ssl",
    "pinning",
    "certificate",
    "security"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gerem66/react-native-pinned-ws.git"
  },
  "author": "Gerem66 <contact@geremy.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gerem66/react-native-pinned-ws/issues"
  },
  "homepage": "https://github.com/Gerem66/react-native-pinned-ws#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/config-conventional": "^17.0.2",
    "@react-native/babel-preset": "^0.79.3",
    "@react-native/eslint-config": "^0.79.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "babel-jest": "^30.0.0-beta.3",
    "commitlint": "^17.0.2",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.6.3",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-builder-bob": "^0.23.2",
    "release-it": "^16.1.4",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "packageManager": "yarn@3.6.1",
  "codegenConfig": {
    "name": "SSLWebSocketSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.sslwebsocket"
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "module"
    ]
  }
}
